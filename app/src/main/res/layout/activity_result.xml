<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="10">

<include layout="@layout/toolbar_layout" android:id="@+id/results"/>
    <TextView
        android:layout_gravity="center"
        android:id="@+id/tvdes"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_weight="0.5"
        android:text="TWAMP Round Trip KPIs"
        android:textColor="@color/colorWhite"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lvdetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:cacheColorHint="@color/colorWhite"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="10">

        <Button
            android:id="@+id/btndetails"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_weight="5"
            android:onClick="onDetails"
            android:text="DETAILS"
            android:layout_marginLeft="8dp" />

        <Button
            android:id="@+id/btndraw"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:layout_weight="5"
            android:onClick="onDrawChart"
            android:text="LINECHART"
            android:layout_marginRight="16dp" />

    </LinearLayout>


</LinearLayout>
